<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilanActivity">

    <TextView
        android:id="@+id/judulStruk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CV. LUKY ANA"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textNamaBarang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judulStruk"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textKuantitas"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textNamaBarang"
        app:layout_constraintTop_toBottomOf="@id/judulStruk"
        android:text="QTY"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textHarga"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textKuantitas"
        android:text="Jumlah"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/judulStruk"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/isiNamabarang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textNamaBarang"
        app:layout_constraintTop_toBottomOf="@id/textNamaBarang"
        tools:text="Nama Barang Yang di Beli"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/isiKuantitas"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        tools:text="12"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/textKuantitas"
        app:layout_constraintTop_toBottomOf="@id/textKuantitas"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/isiHarga"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="48000"
        app:layout_constraintStart_toStartOf="@id/textHarga"
        app:layout_constraintTop_toBottomOf="@id/textHarga"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textOleh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oleh :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/isiNamaOrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Luky"
        app:layout_constraintStart_toEndOf="@id/textOleh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>